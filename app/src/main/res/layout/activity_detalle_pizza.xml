<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mamma_yellow_light"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Botón volver -->
        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Volver"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/mamma_red_dark"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="4dp" />

        <!-- Imagen destacada -->
        <ImageView
            android:id="@+id/imgPizza"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/rounded_image_bg"
            android:contentDescription="Imagen de la pizza" />

        <!-- Nombre de la pizza -->
        <TextView
            android:id="@+id/txtNombrePizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/mamma_red_dark"
            android:layout_marginTop="16dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/txtDescripcionPizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/mamma_brown"
            android:layout_marginTop="8dp" />

        <!-- Precio base -->
        <TextView
            android:id="@+id/txtPrecioBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/mamma_red_dark"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Título toppings -->
        <TextView
            android:text="Toppings disponibles:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/mamma_text_dark"
            android:layout_marginTop="20dp" />

        <!-- Lista toppings -->
        <LinearLayout
            android:id="@+id/layoutToppings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />

        <!-- Precio total -->
        <TextView
            android:id="@+id/txtPrecioTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/mamma_red_dark"
            android:layout_marginTop="20dp" />

        <!-- Botón agregar al pedido -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAgregarPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar al pedido"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/mamma_white"
            android:backgroundTint="@color/mamma_red_dark"
            android:layout_marginTop="24dp"
            android:paddingVertical="16dp"
            app:cornerRadius="12dp"
            app:elevation="4dp" />

    </LinearLayout>
</ScrollView>
